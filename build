#!/bin/bash

function listing {
  

  cp $2 $3;
  echo "<div class='listingSrcCode'>" >> $3;
  echo "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~{.javascript .numberLines}" >> $3;
  cat $1 >> $3;
  echo "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" >> $3;
  echo "</div>" >> $3;

}


listing ./examples/tip-calculator.js tip-notes.md  ./work/tip-src.md;


#CHAPTERS="forward.md preface.md way_of_the_program.md variables.md turtles.md functions.md conditionals.md iteration.md lists.md tuples.md dictionaries.md schools.md while.md";

CHAPTERS="forward.md preface.md way_of_the_program.md variables.md functions.md ./work/tip-src.md conditionals.md code-listings.md fdl-1.3.md";

pandoc -o ./docs/index.html --mathml --highlight-style zenburn -t html5 --template=tmpl/tmpl.html -s --toc --toc-depth=2 --section-divs -H ./tmpl/style.css $CHAPTERS;

pandoc -o ./docs/tjs.epub --mathml --highlight-style zenburn -t epub --template=tmpl/tmpl.html -s --section-divs -H ./tmpl/style.css $CHAPTERS;


